pipeline {
    agent { label 'slav1' }

    environment {
        DOCKER_CREDENTIALS = credentials('docker-credentials-id') // Replace with your Docker credentials ID
        MAVEN_HOME = '/path/to/maven' // Update to your Maven installation path
        KUBE_CONFIG = '/path/to/kubeconfig' // Update to your kubeconfig path
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Checkout code from GitHub
                git 'https://github.com/chandrabhant98/star-agile-banking-finance.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build the project using Maven
                    sh "${MAVEN_HOME}/bin/mvn clean package"
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    // Build Docker image
                    withDockerRegistry([credentialsId: 'docker-credentials-id', url: 'https://your-docker-registry-url']) {
                        sh 'docker build -t your-image-name:latest .'
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Deploy to Kubernetes
                    sh "kubectl --kubeconfig=${KUBE_CONFIG} apply -f k8s/deployment.yaml"
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
